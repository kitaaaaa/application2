<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if user_signed_in? %>
    <header class="header">
    <div class="container">
      <nav class="nav-left">Bookers</nav>
      <nav>
        <ul class="right">
          <li><%= link_to user_path(current_user) do %>
            <span class="glyphicon glyphicon-home" aria-hidden="true">Home</span>
            <% end %>
          </li>
          <li><%= link_to users_path do %>
            <span class="glyphicon glyphicon-user" aria-hidden="true">User</span>
            <% end %>
          </li>
          <li><%= link_to books_path do %>
            <span class="glyphicon glyphicon-book" aria-hidden="true">Books</span>
            <% end %>
          </li>
          <li><%= link_to destroy_user_session_path, method: :delete do %>
            <span class="glyphicon glyphicon-log-out" aria-hidden="true">logout</span>
            <% end %>
          </li>
        </ul>
      </nav>
    </div>
  </header>
  <% else %>
    <header class="header">
    <div class="container">
      <nav class="nav-left">Bookers</nav>
      <nav>
        <ul class="right">
          <li>
            <%= link_to root_path do %>
            <span class="glyphicon glyphicon-home" aria-hidden="true">Home</span>
            <% end %>
          </li>
          <li>
            <%= link_to homes_about_path do %>
            <span class="glyphicon glyphicon-link" aria-hidden="true">About</span>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_registration_path do %>
            <span class="glyphicon glyphicon-edit" aria-hidden="true">sign up</span>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_session_path do %>
            <span class="glyphicon glyphicon-log-in" aria-hidden="true">login</span>
            <% end %>
          </li>
        </ul>
      </nav>
    </div>
  </header>
  <% end %>
    <%= yield %>
    <footer>CopyRight Infratop.inc</footer>
  </body>
</html>