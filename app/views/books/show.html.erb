<body>
	<% if flash[:notice] %>
		<div class="flash">
			<%= flash[:notice] %>
		</div>
	<% end %>
	<div class="container">
		<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpg", size: "100*100" %>
			<table class="table table-striped">
				<tbody>
					<tr>
					  <th>name</th>
					  <th class="profile-name">
					  	<%= @user.name %>
					  </th>
					</tr>
					<tr>
					  <th>introduction</th>
					  <th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
				<%= link_to edit_user_path(@user.id) do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>
				<div class="post">
					<h2>New book</h2>
					<%= form_for(@empty) do |f| %>
					 <p>Title</p>
					  <%= f.text_field :title %>
					 <p>Opinion</p>
					  <%= f.text_area :body %>
					  <%= f.submit 'Create Book' %>
					<% end %>
				</div>
		</div>
		<div class="col-xs-9">
			<h2>Book details</h2>
			<table class="table">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				 <tr>
					<td><%= attachment_image_tag(@user, :profile_image, :fill, 20, 20, format: 'jpeg') %></td>
					<td><%= @book.title %></td>
					<td><%= @book.body %></td>
					<td><%= link_to 'Edit', edit_book_path(@book.id) %></td>
					<td><%= link_to 'destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
				 </tr>	
			</table>
		</div>
	</div>
	</div>
</body>