<body>
	<% if @book.errors.any? %>
	 <div id="error_explanation">
		<h2><%= @book.errors.count %>error prohibited this obj from being saved:error prohibited this obj from being saved: </h2>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	 </div>
	<% end %>
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.jpg", size: "100*100" %>
			<table class="table">
				<tbody>
					<tr>
					  <th>name</th>
					  <th class="profile-name">
					  	<%= @user.name %>
					  </th>
					</tr>
					<tr>
					  <th>introduction</th>
					  <th><%= @user.introduction %></th>
					</tr>
				</tbody>
			</table>
				<%= link_to edit_user_path(@user.id) do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>
				<div class="post">
					<h2>New book</h2>
					<%= form_for(@book) do |f| %>
					 <p>Title</p>
					  <%= f.text_field :title %>
					 <p>Opinion</p>
					  <%= f.text_area :body %>
					  <%= f.submit 'Create Book' %>
					<% end %>
				</div>
		</div>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no-image.jpg", size: "50x50") %></td>
					<td><%= link_to book.title, book_path(book.id) %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
	</div>
</body>